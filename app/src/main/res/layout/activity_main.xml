<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.trevjonez.daggertest.main_activity.MainActivity">

    <TextView
        android:id="@+id/textView_mainActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World from MainActivity"
        android:textSize="16sp"/>


    <fragment
        android:id="@+id/fragmentLayout_fragmentOne"
        android:name="com.trevjonez.daggertest.fragment.fragment_one.FragmentOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_mainActivity"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        tools:layout="@layout/fragment_one"/>

    <fragment
        android:id="@+id/fragmentLayout_fragmentTwo"
        android:name="com.trevjonez.daggertest.fragment.fragment_two.FragmentTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragmentLayout_fragmentOne"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        tools:layout="@layout/fragment_two"/>


</RelativeLayout>
